<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_order_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.marat.apps.android.pro3.Activities.OrderDetailsActivity"
    tools:showIn="@layout/activity_order_details">

    <TextView
        android:id="@+id/odStationNameTextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/odStationNameTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Название: " />

    <TextView
        android:id="@+id/odStationNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/odStationNameTextView1"
        android:layout_toRightOf="@+id/odStationNameTextView1"
        android:text="ECA Car Wash"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/odStationAddressTextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/odStationNameTextView"
        android:layout_marginTop="20dp"
        android:text="Адрес: " />

    <TextView
        android:id="@+id/odStationAddressTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/odStationAddressTextView1"
        android:layout_alignLeft="@+id/odStationNameTextView"
        android:layout_alignStart="@+id/odStationNameTextView"
        android:ellipsize="end"
        android:text="ТЦ Хан-Шатыр, ул. Туран 50, 0 этаж"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/odOrderDateTextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/odStationAddressTextView"
        android:layout_marginTop="20dp"
        android:text="Когда: " />

    <TextView
        android:id="@+id/odOrderDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/odOrderDateTextView1"
        android:layout_alignLeft="@+id/odStationNameTextView"
        android:layout_alignStart="@+id/odStationNameTextView"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="02.02.2017"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/odCarTypeTextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/odOrderDateTextView"
        android:layout_marginTop="20dp"
        android:text="Машина: " />

    <TextView
        android:id="@+id/odCarTypeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/odCarTypeTextView1"
        android:layout_alignLeft="@+id/odStationNameTextView"
        android:layout_alignStart="@+id/odStationNameTextView"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Седан"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/odOrderServicesTextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/odCarTypeTextView"
        android:layout_marginTop="20dp"
        android:text="Услуги: " />

    <TextView
        android:id="@+id/odOrderServicesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/odOrderServicesTextView1"
        android:layout_alignLeft="@+id/odStationNameTextView"
        android:layout_alignStart="@+id/odStationNameTextView"
        android:ellipsize="end"
        android:text="Кузов + Салон + Багажник"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/odPriceTextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/odOrderServicesTextView"
        android:layout_marginTop="20dp"
        android:text="Цена: " />

    <TextView
        android:id="@+id/odPriceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/odPriceTextView1"
        android:layout_alignLeft="@+id/odStationNameTextView"
        android:layout_alignStart="@+id/odStationNameTextView"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="3500 тг."
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/odStatusTextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/odPriceTextView"
        android:layout_marginTop="20dp"
        android:text="Статус: " />

    <TextView
        android:id="@+id/odStatusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/odStatusTextView1"
        android:layout_alignLeft="@+id/odStationNameTextView"
        android:layout_alignStart="@+id/odStationNameTextView"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Активный"
        android:textColor="@android:color/holo_green_dark" />

    <Button
        android:id="@+id/odCancelOrderButton"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/odStatusTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@android:color/holo_red_dark"
        android:onClick="cancelOrder"
        android:text="Отменить Заказ"
        android:textColor="@android:color/white" />

</RelativeLayout>
