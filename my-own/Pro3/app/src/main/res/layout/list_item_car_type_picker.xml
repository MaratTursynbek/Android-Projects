<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <RelativeLayout
        android:id="@+id/dialogCarTypePickerOnTopOfRadioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/dialogCarTypePickerRadioButton"
        android:layout_alignEnd="@+id/dialogCarTypePickerRadioButton"
        android:layout_alignLeft="@+id/dialogCarTypePickerRadioButton"
        android:layout_alignRight="@+id/dialogCarTypePickerRadioButton"
        android:layout_alignStart="@+id/dialogCarTypePickerRadioButton"
        android:layout_alignTop="@+id/dialogCarTypePickerRadioButton" />

    <RadioButton
        android:id="@+id/dialogCarTypePickerRadioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:focusable="false"
        android:focusableInTouchMode="false" />

    <TextView
        android:id="@+id/dialogCarTypePickerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_toEndOf="@+id/dialogCarTypePickerRadioButton"
        android:layout_toRightOf="@+id/dialogCarTypePickerRadioButton"
        android:text="Седан"
        android:textColor="@android:color/black"
        android:textSize="17sp" />

</RelativeLayout>