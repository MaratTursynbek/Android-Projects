<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    card_view:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/carWashIconImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/car_wash_icon" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/carWashIconImage"
            android:layout_toRightOf="@+id/carWashIconImage"
            android:paddingEnd="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:paddingStart="15dp">

            <TextView
                android:id="@+id/carWashNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="ECA Car Wash"
                android:textColor="@android:color/black"
                android:textSize="16.4sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/carWashAddressTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/carWashNameTextView"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="7dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="ТЦ Хан-Шатыр, ул. Туран 50, 0 этаж"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/carWashPriceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/carWashAddressTextView"
                android:layout_marginTop="11dp"
                android:text="Кузов + Салон от 2500 тг."
                android:textSize="14sp" />

            <TextView
                android:id="@+id/carWashDistanceToTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/carWashPriceTextView"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:text="2.1 км" />

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>