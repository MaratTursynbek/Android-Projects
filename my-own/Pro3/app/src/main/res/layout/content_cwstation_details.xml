<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/CWSDetailsScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.marat.apps.android.pro3.Activities.CWStationDetailsActivity"
    tools:showIn="@layout/activity_cwstation_details">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/CWSDetailsChooseCarTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:text="Выберите Машину:" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/CWSDetailsCarTypesRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:layout_below="@+id/CWSDetailsChooseCarTextView" />

        <TextView
            android:id="@+id/CWSDetailsChooseServiceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/CWSDetailsCarTypesRecyclerView"
            android:paddingBottom="8dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:text="Сервисы:" />

        <LinearLayout
            android:id="@+id/CWSDetailsChooseServiceLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/CWSDetailsChooseServiceTextView"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <RelativeLayout
                android:id="@+id/CWSDetailsService1Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/CWSDetailsService1TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="Кузов"
                    android:textColor="@android:color/black" />

                <RadioButton
                    android:id="@+id/CWSDetailsService1RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="32dp"
                    android:layout_marginRight="32dp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/CWSDetailsService2Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/CWSDetailsService2TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="Кузов + Салон"
                    android:textColor="@android:color/black" />

                <RadioButton
                    android:id="@+id/CWSDetailsService2RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="32dp"
                    android:layout_marginRight="32dp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/CWSDetailsService3Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/CWSDetailsService3TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="Кузов + Салон + Багажник"
                    android:textColor="@android:color/black" />

                <RadioButton
                    android:id="@+id/CWSDetailsService3RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="32dp"
                    android:layout_marginRight="32dp" />

            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/priceTextViewLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/CWSDetailsChooseServiceLayout"
            android:layout_marginTop="8dp"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <TextView
                android:id="@+id/totalTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ИТОГО:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/totalPriceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/totalTextView"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"
                android:layout_toEndOf="@+id/totalTextView"
                android:layout_toRightOf="@+id/totalTextView"
                android:text="3200 тг"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

        </RelativeLayout>

        <Button
            android:id="@+id/chooseTimeButton"
            android:layout_width="250dp"
            android:layout_height="55dp"
            android:layout_below="@+id/priceTextViewLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@color/colorButtonBackground"
            android:text="Выбрать Время"
            android:textColor="@android:color/white" />

    </RelativeLayout>

</ScrollView>
