<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/CWSDetailsScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.marat.apps.android.pro3.Activities.CWStationDetailsActivity"
    tools:showIn="@layout/activity_cwstation_details">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <ProgressBar
            android:id="@+id/CWSDetailsProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />

        <TextView
            android:id="@+id/CWSDetailsErrorTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/error_could_not_load_data"
            android:visibility="invisible" />

        <android.support.v7.widget.CardView
            android:id="@+id/CWSDetailsCardView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            app:cardElevation="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/CWSDetailsChooseCarTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/activity_cwsd_vertical_margin"
                    android:text="Выберите Машину:" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/CWSDetailsCarTypesRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_below="@+id/CWSDetailsChooseCarTextView"
                    android:background="@color/colorCarTypeCard" />

                <TextView
                    android:id="@+id/CWSDetailsChooseServiceTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/CWSDetailsCarTypesRecyclerView"
                    android:paddingBottom="8dp"
                    android:paddingLeft="@dimen/activity_cwsd_horizontal_margin"
                    android:paddingRight="@dimen/activity_cwsd_horizontal_margin"
                    android:paddingTop="@dimen/activity_cwsd_vertical_margin"
                    android:text="Сервисы:" />

                <LinearLayout
                    android:id="@+id/CWSDetailsChooseServiceLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/CWSDetailsChooseServiceTextView"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/activity_cwsd_horizontal_margin"
                    android:paddingRight="@dimen/activity_cwsd_horizontal_margin">

                    <RelativeLayout
                        android:id="@+id/CWSDetailsService1Layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="onClick">

                        <RadioButton
                            android:id="@+id/CWSDetailsService1RadioButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="32dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="32dp"
                            android:layout_marginStart="16dp"
                            android:clickable="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false" />

                        <TextView
                            android:id="@+id/CWSDetailsService1TextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="32dp"
                            android:layout_marginRight="32dp"
                            android:layout_toEndOf="@+id/CWSDetailsService1RadioButton"
                            android:layout_toRightOf="@+id/CWSDetailsService1RadioButton"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:paddingBottom="8dp"
                            android:paddingTop="8dp"
                            android:text="Кузов"
                            android:textColor="@android:color/black" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/CWSDetailsService2Layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="onClick">

                        <RadioButton
                            android:id="@+id/CWSDetailsService2RadioButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="32dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="32dp"
                            android:layout_marginStart="16dp"
                            android:clickable="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false" />

                        <TextView
                            android:id="@+id/CWSDetailsService2TextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="32dp"
                            android:layout_marginRight="32dp"
                            android:layout_toEndOf="@+id/CWSDetailsService2RadioButton"
                            android:layout_toRightOf="@+id/CWSDetailsService2RadioButton"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:paddingBottom="8dp"
                            android:paddingTop="8dp"
                            android:text="Кузов + Салон"
                            android:textColor="@android:color/black" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/CWSDetailsService3Layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="onClick">

                        <RadioButton
                            android:id="@+id/CWSDetailsService3RadioButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="32dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="32dp"
                            android:layout_marginStart="16dp"
                            android:clickable="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false" />

                        <TextView
                            android:id="@+id/CWSDetailsService3TextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="32dp"
                            android:layout_marginRight="32dp"
                            android:layout_toEndOf="@+id/CWSDetailsService3RadioButton"
                            android:layout_toRightOf="@+id/CWSDetailsService3RadioButton"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:paddingBottom="8dp"
                            android:paddingTop="8dp"
                            android:text="Кузов + Салон + Багажник"
                            android:textColor="@android:color/black" />

                    </RelativeLayout>

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/CWSDetailsPriceTextViewLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/CWSDetailsChooseServiceLayout"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:padding="@dimen/activity_cwsd_horizontal_margin">

                    <TextView
                        android:id="@+id/CWSDetailsTotalTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="22dp"
                        android:layout_marginStart="22dp"
                        android:text="ИТОГО:"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/CWSDetailsPriceTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/CWSDetailsTotalTextView"
                        android:layout_alignStart="@+id/CWSDetailsTotalTextView"
                        android:layout_below="@+id/CWSDetailsTotalTextView"
                        android:layout_marginTop="10dp"
                        android:text="0 тг"
                        android:textColor="@android:color/black"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/CWSDetailsChooseTimeButton"
                        android:layout_width="190dp"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/CWSDetailsPriceTextView"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignTop="@+id/CWSDetailsTotalTextView"
                        android:layout_marginEnd="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@color/colorButtonBackground"
                        android:onClick="onClick"
                        android:text="Выбрать Время"
                        android:textColor="@android:color/white" />

                </RelativeLayout>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/CWSDetailsCardView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/CWSDetailsCardView1"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            app:cardElevation="5dp">

            <RelativeLayout
                android:id="@+id/CWSDetailsCarWashInfoLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/CWSDetailsChooseTimeButton"
                android:padding="@dimen/activity_cwsd_horizontal_margin">

                <ImageView
                    android:id="@+id/CWSDetailsPhoneImageView"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/ic_phone_black_36dp" />

                <TextView
                    android:id="@+id/CWSDetailsCarWashPhoneNumberTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_alignBottom="@+id/CWSDetailsPhoneImageView"
                    android:layout_alignTop="@+id/CWSDetailsPhoneImageView"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_toEndOf="@+id/CWSDetailsPhoneImageView"
                    android:layout_toRightOf="@+id/CWSDetailsPhoneImageView"
                    android:autoLink="phone"
                    android:gravity="center"
                    android:text="(701) 888-47-14" />

                <ImageView
                    android:id="@+id/CWSDetailsPlaceImageView"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignLeft="@+id/CWSDetailsPhoneImageView"
                    android:layout_alignStart="@+id/CWSDetailsPhoneImageView"
                    android:layout_below="@+id/CWSDetailsPhoneImageView"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_place_black_36dp" />

                <TextView
                    android:id="@+id/CWSDetailsCarWashAddressTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/CWSDetailsPlaceImageView"
                    android:layout_alignTop="@+id/CWSDetailsPlaceImageView"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_toEndOf="@+id/CWSDetailsPlaceImageView"
                    android:layout_toRightOf="@+id/CWSDetailsPlaceImageView"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:onClick="showAddressOnMap"
                    android:text="Адрес автомойки"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/CWSDetailsShowOnMapTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/CWSDetailsCarWashAddressTextView"
                    android:layout_alignStart="@+id/CWSDetailsCarWashAddressTextView"
                    android:layout_below="@+id/CWSDetailsCarWashAddressTextView"
                    android:layout_marginTop="5dp"
                    android:onClick="onClick"
                    android:text="@string/text_show_in_map"
                    android:textColor="@android:color/black" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>

</ScrollView>
