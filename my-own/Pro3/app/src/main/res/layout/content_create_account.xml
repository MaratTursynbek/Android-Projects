<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/createAccountLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryBackground"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.marat.apps.android.pro3.Activities.CreateAccountActivity"
    tools:showIn="@layout/activity_create_account">

    <EditText
        android:id="@+id/userNameEditText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:background="@android:drawable/editbox_background_normal"
        android:hint="@string/hint_new_user_name"
        android:inputType="textPersonName"
        android:maxLength="30"
        android:textSize="14sp" />

    <com.marat.apps.android.pro3.Models.PhoneNumberEditText
        android:id="@+id/newPhoneNumberEditText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/userNameEditText"
        android:layout_marginTop="10dp"
        android:background="@android:drawable/editbox_background_normal"
        android:digits="0123456789+"
        android:hint="@string/hint_new_phone_number"
        android:inputType="phone"
        android:maxLength="15"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/newPasswordEditText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/newPhoneNumberEditText"
        android:layout_marginTop="10dp"
        android:background="@android:drawable/editbox_background_normal"
        android:hint="@string/hint_new_password"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/newPasswordEditText2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/newPasswordEditText"
        android:layout_marginTop="10dp"
        android:background="@android:drawable/editbox_background_normal"
        android:hint="@string/hint_new_password_2"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/cityAndCarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/newPasswordEditText2"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/cityTypeTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/userCityEditText"
                android:layout_alignStart="@+id/userCityEditText"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:text="@string/city_text"
                android:textColor="@android:color/white" />

            <EditText
                android:id="@+id/userCityEditText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/cityTypeTextView"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="6dp"
                android:background="@android:drawable/editbox_background_normal" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/carTypeTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/userCarEditText"
                android:layout_alignStart="@+id/userCarEditText"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:text="@string/car_type_text"
                android:textColor="@android:color/white" />

            <EditText
                android:id="@+id/userCarEditText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/carTypeTextView"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="6dp"
                android:background="@android:drawable/editbox_background_normal" />

        </RelativeLayout>

    </LinearLayout>

    <Button
        android:id="@+id/logInButton"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/cityAndCarLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@color/colorButtonBackground"
        android:onClick="registerUser"
        android:text="@string/create_account_text"
        android:textColor="@android:color/white" />

</RelativeLayout>
